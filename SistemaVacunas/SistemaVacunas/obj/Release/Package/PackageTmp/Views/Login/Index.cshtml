<!-- Listar Modelo Usuarios -->
@model SistemaVacunas.Models.Usuarios
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1 maximum-scale=1.0">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/assets/css/icons.min.css" rel="stylesheet" />
    <link href="~/assets/css/login.css" rel="stylesheet" />
    @*<link href="~/assets/css/app-dark.min.css" rel="stylesheet" />*@
    <title>Iniciar Sesión</title>

</head>
<body>
    <div class="split-screen">
        <div class="right ">
            @using (Html.BeginForm())
            {
                <form class="needs-validation" novalidate>
                    <section class="copy">

                        <div class="text-muted font-16">
                            <p>Bienvenido a EsSalud</p>
                        </div>
                        <center><h4 class="ql-color-orange">Iniciar sesión </h4></center>
                        <p class="text-muted mb-4">
                            <center><img src="~/assets/images/gg.jpg"></center>
                            
                            
                        </p>
                        <p class="text-muted mb-4">
                            Ingrese su dirección de correo electrónico y contraseña para acceder a la cuenta.
                        </p>


                    </section>
                    <div class="input-container email">
                        <label for="email">Email</label>
                        <input id="email" name="email" type="email" placeholder="Introduce tu correo electronico" required>
                    </div>
                    <div class="input-container.password">
                        <label for="password">Contraseña</label>
                        <input id="password" name="password" placeholder="Ingresar al menos 6 caracteres" type="password" required>
                    </div>

                    <div class="input-container.cta">
                        <label class="checkbox-container">
                            <input type="checkbox">
                            <span class="checkmark"></span>Recordar Contraseña
                        </label>
                    </div>
                    <div>

                        <label class="form-check-label">@TempData["mensaje"]</label>
                    </div>
                    <br />
                    <button class="signup-btn" type="submit">Inciar Sesíon</button>
                    <div class="text-center mt-4">
                        <p class="text-muted font-16">Inicia sesión con</p>
                        <ul class="social-list list-inline mt-3">
                            <li class="list-inline-item">
                                <a href="javascript: void(0);" class="social-list-item border-primary text-primary"><i class="mdi mdi-facebook"></i></a>
                            </li>
                            <li class="list-inline-item">
                                <a href="javascript: void(0);" class="social-list-item border-danger text-danger"><i class="mdi mdi-google"></i></a>
                            </li>
                            <li class="list-inline-item">
                                <a href="javascript: void(0);" class="social-list-item border-info text-info"><i class="mdi mdi-twitter"></i></a>
                            </li>
                            <li class="list-inline-item">
                                <a href="javascript: void(0);" class="social-list-item border-secondary text-secondary"><i class="mdi mdi-github"></i></a>
                            </li>
                        </ul>
                    </div>
                    <section class="copy legal">
                        <p>
                            <span class="small">
                                Al continuar, usted acepta aceptar nuestra <br>
                                <a href="#">Política de privacidad</a>&amp;<a href="#">Términos de servicio</a>.
                            </span>
                        </p>
                    </section>
                </form>}
        </div>
        <div class="left">
            <section class="copy">
                <h1>SIVA Application Web</h1>
                <h2>Hospital EsSalud - Tacna<h2>
    <p>Sistema de Gestion de Vacunacion</p>
</section>
        </div>

    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>


    <script src="~/assets/js/index.js"></script>
    <script src="~/assets/js/app.min.js"></script>
    <script src="~/assets/js/vendor.min.js"></script>

</body>
</html>