@model List<SistemaVacunas.Models.Usuarios>
@{
    ViewBag.Title = "Index";

}

<!-- Page header -->
<dv class="full-box page-header">
    <h3 class="text-left">
        <a href="~/Usuarios/Agregar/" class="btn btn-success">Nuevo Registro</a> <br />
        <i class="fas fa-clipboard-list fa-fw"></i> &nbsp; Administracion de Usuarios
    </h3>

</dv>
<!--CONTENT-->
<!-- Content here-->
<div class="container-fluid">
    @using (Html.BeginForm("Index", "Usuarios", FormMethod.Post))
    {
    }
    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success">
            <strong>Success !</strong>@TempData["AlertMessage"]
        </div>
    }
    <div class="table-responsive">
        <table id="datatable" class="display" style="width:100%">
            <thead>
                <tr class="text-center">

                    <th>#</th>
                    <th>DNI</th>
                    <th>NOMBRE</th>
                    <th>EMAIL</th>
                    <th>ROL</th>
                    <th>ESTADO</th>
                    <th>OPCIONES</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@(item.Id_usuario)</td>
                        <td>@(item.Dni)</td>
                        <td>@(item.Nombre)</td>
                        <td>@(item.Email)</td>
                        <td>@(item.Rol.Descripcion)</td>
                        <td>
                            <a href="#" class="btn btn-danger">@(item.Estado == "A" ? "Activo" : "Inactivo" )</a>
                        </td>
                        <td>
                            <a onclick="return confirm('Esta Seguro que desea Actualizar Datos del registro?')" href="~/Usuarios/Agregar/@item.Id_usuario" class="btn btn-primary">Actualizar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




