@model List<SistemaVacunas.Models.Dosis>
@{
    ViewBag.Title = "Index";
}

<!-- Page header -->
<dv class="full-box page-header">
    <h3 class="text-left">
        <a href="~/Dosis/Agregar/" class="btn btn-success">Nuevo Registro</a> <br />
        <i class="fas fa-clipboard-list fa-fw"></i> &nbsp; Administracion de Dosis
    </h3>

</dv>
<!--CONTENT-->
<!-- Content here-->
<div class="container-fluid">
    @using (Html.BeginForm("Index", "Dosis", FormMethod.Post))
    {
    }
    <div class="table-responsive">
        <table id="datatable" class="display" style="width:100%">
            <thead>
                <tr class="text-center">

                    <th>#</th>
                    @*<th>DOSIS</th>*@
                    <th>CANTIDAD</th>
                    <th>OBSERVACIONES</th>
                    <th>FECHA</th>
                    <th>ESTADO</th>
                    <th>OPCIONES</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr class="text-center">
                    <td>@(item.Id_dosis)</td>
                    @*<td>@(item.Tipo_Dosis.Descripcion)</td>*@
                    <td>@(item.Cantidad)</td>
                    <td>@(item.Observaciones)</td>
                    <td>@(item.Fecha)</td>

                    <td>
                        <a href="#" class="btn btn-danger">@(item.Estado == "A" ? "Activo" : "Inactivo" )</a>
                        
                    </td>
                    <td>
                        <a onclick="return confirm('Esta Seguro que desea Actualizar Datos del registro?')"href="~/Dosis/Agregar/@item.Id_dosis" class="btn btn-primary">Actualizar</a>
                        <a onclick="return confirm('Esta Seguro que desea eliminar el registro?')" href="~/Dosis/Eliminar/@item.Id_dosis" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


