<!-- Listar Modelo Usuario -->
@model SistemaVacunas.Models.Usuarios
@{
    ViewBag.Title = "Agregar";
    List<SistemaVacunas.Models.Rol> tipousuario = ViewBag.Tipo;
}

<!-- Page header -->
<div class="full-box page-header">
    <h3 class="text-left">
        <i class="fas fa-plus fa-fw"></i> &nbsp; Administracion de Usuarios
    </h3>
    <p class="text-justify">

    </p>
</div>
<!--CONTENT-->
<!-- Content here-->
<!-- Formulario Mantenimiento -->
<div class="container-fluid">
    @using (Html.BeginForm("Registrar", "Usuarios", FormMethod.Post, new { id = "frm-productos" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.Id_usuario)
        <div><i class="fas fa-user"></i> &nbsp; CREANDO NUEVO USUARIO</div>
        <div class="row">

            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="producto_nombre" class="bmd-label-floating">Nombre :</label>
                    @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="producto_email" class="bmd-label-floating">Apellidos:</label>
                    @Html.TextBoxFor(x => x.Apellidos, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Apellidos, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="producto_Dni" class="bmd-label-floating">Documento Identidad:</label>
                    @Html.TextBoxFor(x => x.Dni, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Dni, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="producto_Direccion" class="bmd-label-floating">Direccion:</label>
                    @Html.TextBoxFor(x => x.Direccion, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Direccion, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="producto_Telefono" class="bmd-label-floating">Telefono / Movil:</label>
                    @Html.TextBoxFor(x => x.Telefono, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Telefono, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="producto_email" class="bmd-label-floating">Email:</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", autofocus = "autofocus" })
                    @Html.ValidationMessageFor(x => x.Email, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="producto_contraseña" class="bmd-label-floating">Contraseña:</label>
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Password, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="producto_rol" class="bmd-label-floating">Asignar Rol:</label>
                    <select name="id_rol" class="form-control">
                        <option @(Model.Id_rol.Equals("") ? "selected" : "") value="">--Seleccione--</option>
                        @foreach (var t in tipousuario)
                        {
                            <option @(Model.Id_rol.Equals(t.Id_rol) ? "selected" : "")
                                    value="@t.Id_rol">
                                @t.Descripcion
                            </option>
                        }
                    </select>
                    @Html.ValidationMessageFor(x => x.Id_rol, null, new { @class = "label label-danger" })
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label for="producto_estado" class="bmd-label-floating">Estado</label>
                    <select name="ESTADO" class="form-control">
                        <option @(Model.Estado == "A" ? "selected" : "") value="A">Activo</option>
                        <option @(Model.Estado == "I" ? "selected" : "") value="I">Inactivo</option>
                    </select>
                    @Html.ValidationMessageFor(x => x.Estado, null, new { @class = "label label-danger" })
                </div>
            </div>
        </div>
        <p class="text-center" style="margin-top: 40px;">


            <button onclick="return confirm('Esta Seguro que desea Registrar Datos del registro?')" type="submit" class="btn btn-primary"><i class="far fa-save"></i> &nbsp; Registrar</button>
            &nbsp; &nbsp;
            <a href="~/Usuarios" class="btn btn-danger">Cancelar</a>
        </p>
    }
</div>

