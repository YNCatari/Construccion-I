<!-- Listar Modelo Centro -->
@model List<SistemaVacunas.Models.Centro>
@{
    ViewBag.Title = "Index";
}

<!-- Cabeza de Pagina -->
<dv class="full-box page-header">
    <h3 class="text-left">
        <a href="~/Centro/Agregar/" class="btn btn-success">Nuevo Registro</a> <br />
        <i class="fas fa-clipboard-list fa-fw"></i> &nbsp; Administracion de Centros de Salud
    </h3>

</dv>
<!--Contenido-->
<!-- Tabla de Centros-->
<div class="container-fluid">
    @using (Html.BeginForm("Index", "Centro", FormMethod.Post))
    {
    }
    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success">
            <strong>Success !</strong>@TempData["AlertMessage"]
        </div>
    }
    <div class="table-wrapper">
        <table id="datatable" class="display" style="width:100%">
            <thead>
                <tr class="text-center">

                    <th>#</th>
                    <th>ORGANIZACION</th>
                    <th>DIRECCION</th>
                    <th>CALLE</th>
                    <th>CIUDAD</th>
                    <th>DISTRITO</th>
                    <th>CODIGO POSTAL</th>
                    <th>PUESTO</th>
                    <th>OPCIONES</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@(item.Id_centro)</td>
                        <td>@(item.Nombre)</td>
                        <td>@(item.Direccion)</td>
                        <td>@(item.Calle)</td>
                        <td>@(item.Ciudad)</td>
                        <td>@(item.Distrito)</td>
                        <td>@(item.Codigo)</td>
                        <td>@(item.Tipo_Salud.Descripcion)</td>

                        <td>
                            <a href="~/Centro/Agregar/@item.Id_centro" class="btn btn-primary">Actualizar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

