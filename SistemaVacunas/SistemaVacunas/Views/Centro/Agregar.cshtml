<!-- Listar Modelo Centro -->
@model SistemaVacunas.Models.Centro
@{
    ViewBag.Title = "Agregar";
    List<SistemaVacunas.Models.Tipo_Salud> tipousuario = ViewBag.Tipo;
}

<!-- Cabeza de Pagina -->
<div class="full-box page-header">
    <h3 class="text-left">
        <i class="fas fa-plus fa-fw"></i> &nbsp; Administracion de Centro de Salud
    </h3>
    <p class="text-justify">

    </p>
</div>
<!--Contenido-->
<!-- Formulario Mantenimiento Centro -->
<div class="container-fluid">
    @using (Html.BeginForm("Registrar", "Centro", FormMethod.Post, new { id = "frm-productos" }))
    {
        @Html.HiddenFor(x => x.Id_centro)
        <div><i class="fas fa-user"></i> &nbsp; CREANDO NUEVO CENTRO DE SALUD</div>
        <div class="row">

            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="producto_nombre" class="bmd-label-floating">Organizacion:</label>
                    @Html.TextBoxFor(x => x.Nombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="producto_email" class="bmd-label-floating">Direccion:</label>
                    @Html.TextBoxFor(x => x.Direccion, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Direccion, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="producto_Dni" class="bmd-label-floating">Av/Calle:</label>
                    @Html.TextBoxFor(x => x.Calle, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Calle, null, new { @class = "label label-danger" })
                </div>
            </div>
            
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label for="producto_estado" class="bmd-label-floating">Ciudad / Provincia</label>
                    <select name="Ciudad" class="form-control">
                        <option @(Model.Ciudad == "Tacna" ? "selected" : "") value="Tacna">Tacna</option>
                       
                    </select>
                    @Html.ValidationMessageFor(x => x.Ciudad, null, new { @class = "label label-danger" })
                </div>
            </div>

            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label for="producto_estado" class="bmd-label-floating">Distrito</label>
                    <select name="Distrito" class="form-control">
                         <option @(Model.Distrito == "Tacna" ? "selected" : "") value="Tacna">Tacna</option>
                        <option @(Model.Distrito == "Tacna" ? "selected" : "") value="Tacna">Tacna</option>
                        <option @(Model.Distrito == "Alto de la Alianza" ? "selected" : "") value="Alto de la Alianza">Alto de la Alianza</option>
                        <option @(Model.Distrito == "Palca" ? "selected" : "") value="Palca">Palca</option>
                        <option @(Model.Distrito == "Calana" ? "selected" : "") value="Calana">Calana</option>
                        <option @(Model.Distrito == "Ciudad Nueva" ? "selected" : "") value="Ciudad Nueva">Ciudad Nueva</option>
                        <option @(Model.Distrito == "Coronel Gregorio Albarracín Lanchipa" ? "selected" : "") value="Coronel Gregorio Albarracín Lanchipa">Coronel Gregorio Albarracín Lanchipa</option>
                        <option @(Model.Distrito == "Inclán" ? "selected" : "") value="Inclán">Inclán</option>
                        <option @(Model.Distrito == "La Yarada-Los Palos" ? "selected" : "") value="La Yarada-Los Palos">La Yarada-Los Palos</option>
                        <option @(Model.Distrito == "Pachía" ? "selected" : "") value="Pachía">Pachía</option>
                        <option @(Model.Distrito == "Pocollay" ? "selected" : "") value="Pocollay">Pocollay</option>
                        <option @(Model.Distrito == "Sama" ? "selected" : "") value="Sama">Sama</option>
                    </select>
                    @Html.ValidationMessageFor(x => x.Distrito, null, new { @class = "label label-danger" })
                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="producto_contraseña" class="bmd-label-floating">Codigo Postal:</label>
                    @Html.TextBoxFor(x => x.Codigo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Codigo, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="producto_rol" class="bmd-label-floating">Puesto:</label>
                    <select name="Id_tiposalud" class="form-control">
                        <option @(Model.Id_tiposalud.Equals("") ? "selected" : "") value="">--Seleccione--</option>
                        @foreach (var t in tipousuario)
                        {
                            <option @(Model.Id_tiposalud.Equals(t.Id_tiposalud) ? "selected" : "")
                                    value="@t.Id_tiposalud">
                                @t.Descripcion
                            </option>
                        }
                    </select>
                    @Html.ValidationMessageFor(x => x.Id_tiposalud, null, new { @class = "label label-danger" })
                </div>
            </div>


        </div>
        <p class="text-center" style="margin-top: 40px;">


            <button type="submit" class="btn btn-primary"><i class="far fa-save"></i> &nbsp; Registrar</button>
            &nbsp; &nbsp;
            <a href="~/Centro" class="btn btn-danger">Cancelar</a>
        </p>
    }
</div>


