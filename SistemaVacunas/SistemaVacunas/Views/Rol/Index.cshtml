@model List<SistemaVacunas.Models.Rol>
@{
    ViewBag.Title = "Index";
}

<!-- Page header -->
<dv class="full-box page-header">
    <h3 class="text-left">
        <a href="~/Rol/Agregar/" class="btn btn-success">Nuevo Registro</a> <br />
        <i class="fas fa-clipboard-list fa-fw"></i> &nbsp; Administracion de Roles
    </h3>

</dv>




<!--CONTENT-->
<!-- Content here-->
<div class="container-fluid">
    @using (Html.BeginForm("Index", "Rol", FormMethod.Post))
    {
    }
    <div class="table-responsive">

        <table id="datatable" class="display" style="width:100%">
            <thead>
                <tr class="text-center">

                    <th>#</th>
                    <th>NOMBRE</th>
                    <th>DESCRIPCION</th>
                    <th>ESTADO</th>
                    <th>OPCIONES</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@(item.Id_rol)</td>
                        <td>@(item.Nombre)</td>
                        <td>@(item.Descripcion)</td>
                        <td>
                            <a href="#" class="btn btn-danger">@(item.Estado == "A" ? "Activo" : "Inactivo" )</a>
                        </td>
                        <td>
                            <a onclick="return confirm('Esta Seguro que desea Actualizar Datos del registro?')"href="~/Rol/Agregar/@item.Id_rol" class="btn btn-primary">Actualizar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>