@model List<SistemaVacunas.Models.Paciente>
@{
    ViewBag.Title = "Index";
}

<!-- Page header -->
<dv class="full-box page-header">
    <h3 class="text-left">
        <a href="~/Paciente/Agregar/" class="btn btn-success">Nuevo Registro</a> <br />
        <i class="fas fa-clipboard-list fa-fw"></i> &nbsp; Administracion de Pacientes
    </h3>

</dv>

<!--CONTENT-->
<!-- Content here-->
<!-- Content here-->
<div class="container-fluid">
    @using (Html.BeginForm("Index", "Paciente", FormMethod.Post))
    {
    }
    <div class="table-responsive">
        <table id="datatable" class="display" style="width:100%">
            <thead>
                <tr class="text-center">

                    <th>#</th>
                    <th>DNI</th>
                    <th>NOMBRES</th>
                    <th>APELLIDOS</th>
                    <th>DIRECCION</th>
                    <th>TELEFONO / CELULAR</th>
                    <th>EMAIL</th>
                    <th>ESTADO</th>
                    <th>OPCIONES</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@(item.Id_paciente)</td>
                        <td>@(item.Dni)</td>
                        <td>@(item.Nombre)</td>
                        <td>@(item.Apellidos)</td>
                        <td>@(item.Direccion)</td>
                        <td>@(item.Telefono)</td>
                        <td>@(item.Email)</td>
                        <td>
                            <a href="#" class="btn btn-danger">@(item.Estado == "A" ? "Activo" : "Inactivo" )</a>
                        </td>
                        <td>
                            <a onclick="return confirm('Esta Seguro que desea Actualizar Datos del registro?')"href="~/Paciente/Agregar/@item.Id_paciente" class="btn btn-primary">Actualizar</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

