@model List<SistemaVacunas.Models.Medico>
@{
    ViewBag.Title = "Index";
}

<!-- Page header -->
<dv class="full-box page-header">
    <h3 class="text-left">
        <a href="~/Medico/Agregar/" class="btn btn-success">Nuevo Registro</a> <br />
        <i class="fas fa-clipboard-list fa-fw"></i> &nbsp; Administracion de Medicos
    </h3>

</dv>
<!--CONTENT-->
<!-- Content here-->
<div class="container-fluid">
    @using (Html.BeginForm("Index", "Medico", FormMethod.Post))
    {
    }
    <div class="table-responsive">
        <table id="datatable" class="display" style="width:100%">
            <thead>
                <tr class="text-center">

                    <th>#</th>
                    <th>DNI</th>
                    <th>NOMBRE</th>
                    <th>APELLIDOS</th>
                    <th>TELEFONO</th>
                    <th>SEXO</th>
                    <th>EMAIL</th>
                    <th>ROL</th>
                    <th>HORARIO</th>
                    <th>ESTADO</th>
                    <th>OPCIONES</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@(item.Id_medico)</td>
                        <td>@(item.Dni)</td>
                        <td>@(item.Nombre)</td>
                        <td>@(item.Apellidos)</td>
                        <td>@(item.Telefono)</td>
                        <td>@(item.Sexo)</td>

                        <td>@(item.Email)</td>

                        <td>@(item.Rol.Descripcion)</td>

                        <td>@item.Horario.Inicio -- @item.Horario.Fin</td>
                        <td>
                            <a href="#" class="btn btn-danger">@(item.Estado == "A" ? "Activo" : "Inactivo" )</a>
                        </td>
                        <td>
                            <a onclick="return confirm('Esta Seguro que desea Actualizar Datos del registro?')"href="~/Medico/Agregar/@item.Id_medico" class="btn btn-primary">Actualizar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
