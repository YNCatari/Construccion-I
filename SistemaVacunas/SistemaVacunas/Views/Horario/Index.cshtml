<!-- Listar Modelo Horario -->
@model List<SistemaVacunas.Models.Horario>
@{
    ViewBag.Title = "Index";
}

<!-- Cabeza de Pagina -->
<dv class="full-box page-header">
    <h3 class="text-left">
        <a href="~/Horario/Agregar/" class="btn btn-success">Nuevo Registro</a> <br />
        <i class="fas fa-clipboard-list fa-fw"></i> &nbsp; Administracion de Horarios
    </h3>

</dv>

<!--Contenido-->
<!-- Tabla de Horario-->
<div class="container-fluid">
    @using (Html.BeginForm("Index", "Horario", FormMethod.Post))
    {
    }
    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success">
            <strong>Success !</strong>@TempData["AlertMessage"]
        </div>
    }
    <div class="table-responsive">
        <table id="datatable" class="table table-bordered" style="width:100%">
            <thead style="background-color:darkgoldenrod;color:white">
                <tr class="text-center">

                    <th>#</th>
                    <th>HORARIOS AM</th>
                    <th>HORARIOS PM</th>
                    <th>DESCRIPCION</th>
                    <th>ESTADO</th>
                    <th>OPCIONES</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@(item.Id_horario)</td>
                        <td>@(item.Inicio)</td>
                        <td>@(item.Fin)</td>
                        <td>@(item.Descripcion)</td>
                        <td>
                            <a href="#" class="btn btn-danger">@(item.Estado == "A" ? "Activo" : "Inactivo" )</a>
                        </td>
                        <td>
                            <a onclick="return confirm('Esta Seguro que desea Actualizar Datos del registro?')" href="~/Horario/Agregar/@item.Id_horario" class="btn btn-primary">Actualizar</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


