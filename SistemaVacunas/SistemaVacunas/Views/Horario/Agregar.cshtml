<!-- Listar Modelo Horario -->
@model SistemaVacunas.Models.Horario
@{
    ViewBag.Title = "Agregar";
}

<!-- Cabeza de Pagina -->
<div class="full-box page-header">
    <h3 class="text-left">
        <i class="fas fa-plus fa-fw"></i> &nbsp; Administracion de Horarios
    </h3>
    <p class="text-justify">

    </p>
</div>

<!-- Contenido -->
<!-- Formulario Mantenimiento Horario -->
<div class="container-fluid">
    @using (Html.BeginForm("Registrar", "Horario", FormMethod.Post, new { id = "frm-productos" }))
    {
        @Html.HiddenFor(x => x.Id_horario)
        <form action="" class="form-neon" autocomplete="off">
            <fieldset>
                <div><i class="fas fa-user"></i> &nbsp; CREANDO NUEVO HORARIOS</div>
                <div class="container-fluid">
                    <div class="row">




                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label for="producto_nombre" class="bmd-label-floating">Hora Inicio:</label>
                                <input class="form-control" name="Inicio" type="time" id="inputMDEx1 ">
                                @Html.ValidationMessageFor(x => x.Inicio, null, new { @class = "label label-danger" })
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label for="producto_fin" class="bmd-label-floating">Hora Final:</label>
                                <input class="form-control" name="Fin" type="time" id="inputMDEx1 ">
                                @Html.ValidationMessageFor(x => x.Fin, null, new { @class = "label label-danger" })
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label for="producto_Descripcion" class="bmd-label-floating">Descripcion:</label>
                                @Html.TextAreaFor(x => x.Descripcion, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.Descripcion, null, new { @class = "label label-danger" })
                            </div>
                        </div>
                        <div class="col-12 col-md-4">
                            <label for="producto_Descripcion" class="bmd-label-floating">Estado:</label>
                            <select name="estado" class="form-control">
                                <option @(Model.Estado == "A" ? "selected" : "") value="A">Activo</option>
                                <option @(Model.Estado == "I" ? "selected" : "") value="I">Inactivo</option>
                            </select>
                            @Html.ValidationMessageFor(x => x.Estado, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                </div>
            </fieldset>
            <br><br><br>
            <p class="text-center" style="margin-top: 40px;">
                <button type="submit" class="btn btn-primary"><i class="far fa-save"></i> &nbsp; Registrar</button>
                &nbsp; &nbsp;
                <a href="~/Horario" class="btn btn-danger" type="reset">Cancelar</a>
            </p>
        </form>
    }
</div>

