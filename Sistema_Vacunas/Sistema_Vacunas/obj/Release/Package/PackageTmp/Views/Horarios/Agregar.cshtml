@model Sistema_Vacunas.Models.Horario
@{
    ViewBag.Title = "Agregar";
}

<!-- Page header -->
<div class="full-box page-header">
    <h3 class="text-left">
        <i class="fas fa-plus fa-fw"></i> &nbsp; Administracion de Horarios
    </h3>
    <p class="text-justify">

    </p>
</div>

<!--CONTENT-->
<!-- Content here-->
<div class="container-fluid">
    @using (Html.BeginForm("Registrar", "Horarios", FormMethod.Post, new { id = "frm-productos" }))
    {
        @Html.HiddenFor(x => x.id_horario)
        <form action="" class="form-neon" autocomplete="off">
            <fieldset>
                <legend><i class="fas fa-user"></i> &nbsp; CREANDO NUEVO HORARIOS</legend>
                <div class="container-fluid">
                    <div class="row">

                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label for="producto_nombre" class="bmd-label-floating">Hora AM:</label>
                                @Html.TextBoxFor(x => x.iniciohorario, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.iniciohorario, null, new { @class = "label label-danger" })
                            </div>
                        </div>
                        <div class="col-12 col-md-6">
                            <div class="form-group">
                                <label for="producto_Descripcion" class="bmd-label-floating">Hora PM:</label>
                                @Html.TextBoxFor(x => x.iniciofin, new { @class = "form-control" })
                                @Html.ValidationMessageFor(x => x.iniciofin, null, new { @class = "label label-danger" })
                            </div>
                        </div>

                        <div class="col-12 col-md-4">
                            <label for="producto_Descripcion" class="bmd-label-floating">Estado:</label>
                            <select name="estado" class="form-control">
                                <option @(Model.estado == "A" ? "selected" : "") value="A">Activo</option>
                                <option @(Model.estado == "I" ? "selected" : "") value="I">Inactivo</option>
                            </select>
                            @Html.ValidationMessageFor(x => x.estado, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                </div>
            </fieldset>
            <br><br><br>
                    <p class="text-center" style="margin-top: 40px;">
                        <button type="submit" class="btn btn-primary"><i class="far fa-save"></i> &nbsp; Registrar</button>
                        &nbsp; &nbsp;
                        <a href="~/Horarios" class="btn btn-danger" type="reset">Cancelar</a>
                    </p>
        </form>
    }
</div>