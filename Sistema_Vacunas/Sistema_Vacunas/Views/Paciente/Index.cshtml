@model List<Sistema_Vacunas.Models.Pacientes>
@{
    ViewBag.Title = "Index";
}

<!-- Page header -->
<dv class="full-box page-header">
    <h3 class="text-left">
        <a href="~/Paciente/Agregar/" class="btn btn-success">Nuevo Registro</a> <br />
        <i class="fas fa-clipboard-list fa-fw"></i> &nbsp; Administracion de Pacientes
    </h3>

</dv>

<!--CONTENT-->
<!-- Content here-->
<!-- Content here-->
<div class="container-fluid">
    @using (Html.BeginForm("Index", "Paciente", FormMethod.Post))
    {
    }
    <div class="table-responsive">
        <table id="datatable" class="display" style="width:100%">
            <thead>
                <tr class="text-center">

                    <th>#</th>
                    <th>Dni</th>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Direccion</th>
                    <th>Telefono / Celular</th>
                    <th>Email</th>
                    <th>Estado</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr class="text-center">
                    <td>@(item.id_pacientes)</td>
                    <td>@(item.dni)</td>
                    <td>@(item.nombre)</td>
                    <td>@(item.apellidos)</td>
                    <td>@(item.direccion)</td>
                    <td>@(item.telefono)</td>
                    <td>@(item.email)</td>
                    <td>
                        <a href="#" class="btn btn-danger">@(item.estado == "A" ? "Activo" : "Inactivo" )</a>
                    </td>
                    <td>
                        <a href="~/Paciente/Agregar/@item.id_pacientes" class="btn btn-primary">Actualizar</a>

                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>