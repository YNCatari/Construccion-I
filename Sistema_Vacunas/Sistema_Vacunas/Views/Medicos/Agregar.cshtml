@model Sistema_Vacunas.Models.Medicos
@{
    ViewBag.Title = "Agregar";
    List<Sistema_Vacunas.Models.Rol> tipousuario = ViewBag.Tipo;
    List<Sistema_Vacunas.Models.Horario> tipohorario = ViewBag.Horario;
}

<!-- Page header -->
<div class="full-box page-header">
    <h3 class="text-left">
        <i class="fas fa-plus fa-fw"></i> &nbsp; Administracion de Medicos
    </h3>
    <p class="text-justify">

    </p>
</div>
<!--CONTENT-->
<!-- Content here-->
<div class="container-fluid">
    @using (Html.BeginForm("Registrar", "Medicos", FormMethod.Post, new { id = "frm-productos" }))
    {
        @Html.HiddenFor(x => x.id_medico)
        <div><i class="fas fa-user"></i> &nbsp; CREANDO NUEVO USUARIO</div>
        <div class="row">


            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="medico_Dni" class="bmd-label-floating">Documento Identidad:</label>
                    @Html.TextBoxFor(x => x.dni, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.dni, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="medico_nombre" class="bmd-label-floating">Nombre:</label>
                    @Html.TextBoxFor(x => x.nombre, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.nombre, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="medico_apellidos" class="bmd-label-floating">Apellidos:</label>
                    @Html.TextBoxFor(x => x.apellidos, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.apellidos, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="medico_telefono" class="bmd-label-floating">Telefono / Movil:</label>
                    @Html.TextBoxFor(x => x.telefono, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.telefono, null, new { @class = "label label-danger" })
                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="medico_sexo" class="bmd-label-floating">Sexo:</label>
                    @Html.TextBoxFor(x => x.sexo, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.sexo, null, new { @class = "label label-danger" })
                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="medico_email" class="bmd-label-floating">Email:</label>
                    @Html.TextBoxFor(x => x.email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.email, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="medico_turnomañana" class="bmd-label-floating">Turno Mañana:</label>
                    @Html.TextBoxFor(x => x.turno_mañana, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.turno_mañana, null, new { @class = "label label-danger" })
                </div>
            </div>

            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="medico_contraseña" class="bmd-label-floating">Contraseña:</label>
                    @Html.TextBoxFor(x => x.contraseña, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.contraseña, null, new { @class = "label label-danger" })
                </div>
            </div>
            <div class="col-12 col-md-4">
                <div class="form-group">
                    <label for="producto_estado" class="bmd-label-floating">Estado</label>
                    <select name="ESTADO" class="form-control">
                        <option @(Model.estado == "A" ? "selected" : "") value="A">Activo</option>
                        <option @(Model.estado == "I" ? "selected" : "") value="I">Inactivo</option>
                    </select>
                    @Html.ValidationMessageFor(x => x.estado, null, new { @class = "label label-danger" })
                </div>
            </div>
            @*rol*@
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="medico_rol" class="bmd-label-floating">Asignar Rol:</label>
                    <select name="id_rol" class="form-control">
                        <option @(Model.id_rol.Equals("") ? "selected" : "") value="">--Seleccione--</option>
                        @foreach (var t in tipousuario)
                        {
                            <option @(Model.id_rol.Equals(t.id_rol) ? "selected" : "")
                                    value="@t.id_rol">
                                @t.descripcion
                            </option>
                        }
                    </select>
                    @Html.ValidationMessageFor(x => x.id_rol, null, new { @class = "label label-danger" })
                </div>
            </div>

            @*Horario*@
            <div class="col-12 col-md-6">
                <div class="form-group">
                    <label for="medico_horario" class="bmd-label-floating">Asignar Horario:</label>
                    <select name="id_horario" class="form-control">
                        <option @(Model.id_horario.Equals("") ? "selected" : "") value="">--Seleccione--</option>
                        @foreach (var t in tipohorario)
                        {
                            <option @(Model.id_horario.Equals(t.id_horario) ? "selected" : "")
                                    value="@t.id_horario">
                                @t.iniciohorario -- @t.iniciofin
                            </option>
                        }
                    </select>
                    @Html.ValidationMessageFor(x => x.id_rol, null, new { @class = "label label-danger" })
                </div>
            </div>


            @*<div class="col-12 col-md-6">
            <div class="form-group">
                <label for="medico_horario" class="bmd-label-floating">HORARIO:</label>
                @Html.TextBoxFor(x => x.id_horario, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.id_horario, null, new { @class = "label label-danger" })
            </div>
        </div>*@


        </div>
        <p class="text-center" style="margin-top: 40px;">


            <button type="submit" class="btn btn-primary"><i class="far fa-save"></i> &nbsp; Registrar</button>
            &nbsp; &nbsp;
            <a href="~/Medicos" class="btn btn-danger">Cancelar</a>
        </p>
    }
</div>
